	<IfModule mod_ssl.c>
                SSLEngine On
                SSLProtocol -ALL +SSLv3 +TLSv1
                SSLCipherSuite ALL:!aNULL:!ADH:!eNULL:!LOW:!EXP:RC4+RSA:+HIGH:!MEDIUM
                SSLCertificateFile /***REMOVED***/secure/certificates/qa.intranet.crt
                SSLCertificateKeyFile /***REMOVED***/secure/certificates/qa.intranet.key

                <Files ~ "\.(***REMOVED***i|shtml|phtml|php?)$">
                        SSLOptions +StdEnvVars
                </Files>
                <Directory "/usr/lib/***REMOVED***i-bin">
                        SSLOptions +StdEnvVars
                </Directory>
                SetEnvIf User-Agent ".*MSIE.*" \
                        nokeepalive ssl-unclean-shutdown \
                        downgrade-1.0 force-response-1.0
        </IfModule>

        <IfModule mod_gnutls.c>
                GnuTLSEnable On
                GnuTLSExportCertificates on
                GnuTLSPriorities SECURE
                GnuTLSCertificateFile /***REMOVED***/secure/certificates/qa.intranet.crt
                GnuTLSKeyFile /***REMOVED***/secure/certificates/qa.intranet.key
        </IfModule>

</VirtualHost>
