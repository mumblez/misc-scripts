<VirtualHost *:80>
        ServerAdmin webmaster@localhost
        ServerName zaibatsu.***REMOVED***.com
        <IfModule !mod_php5.c>
            Use php52 zaibatsu
        </IfModule>

        DocumentRoot /srv/***REMOVED***/www/zaibatsu/

        ErrorLog /srv/***REMOVED***/log/zaibatsu/error.log

        # Possible values include: debug, info, notice, warn, error, crit,
        # alert, emerg.
        LogLevel error
        CustomLog /srv/***REMOVED***/log/zaibatsu/access.log combined

        Options +FollowSymLinks

        <Directory /srv/***REMOVED***/www/zaibatsu/>
                Options Indexes FollowSymLinks MultiViews
                AllowOverride All
                Order deny,allow
                Deny from all
                Allow from 127.0.0.1 92.52.113.224 ***REMOVED*** 92.52.113.225 ***REMOVED*** # Live
                Allow from 127.0.0.1 92.52.113.226 ***REMOVED*** 92.52.113.231 ***REMOVED*** # Test
                Allow from 77.107.84.74 93.97.44.249 # London Office
                Allow from 70.107.224.166 184.74.230.50 # New York Office
                Allow from 210.13.65.2 58.246.18.114 # Shanghai office
                Allow from 62.34.159.117 # Loic
                Allow from ***REMOVED***.0/22

        RewriteEngine on
        # if a directory or a file exists, use it directly
        RewriteCond %{REQUEST_FILENAME} !-f
        RewriteCond %{REQUEST_FILENAME} !-d
        <IfModule !mod_php5.c>
          RewriteCond %{REQUEST_URI} !^/php52-zaibatsu.fast***REMOVED***i(.*)
        </IfModule>
        # otherwise forward it to index.php
        RewriteRule . index.php
        </Directory>
</VirtualHost>
