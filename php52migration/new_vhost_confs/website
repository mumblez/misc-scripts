<VirtualHost *:80>
        ServerAdmin webmaster@***REMOVED***.com
        ServerName secure.***REMOVED***.com
        DocumentRoot /***REMOVED***/www/website/

        RewriteEngine On
        RewriteCond %{SERVER_PORT} !443
        RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [R=301,L]
</VirtualHost>

<VirtualHost ***REMOVED***:443>
