        RewriteCond %{QUERY_STRING} (.*?)page=(.+?)(&.+)?$
        RewriteRule ^.+$ /%2?%1%3 [R=permanent,L]

	# rewrites URLs containing the 'page' parameter to a non-query-string-based one
	RewriteRule ^/intranet http://intranet.***REMOVED***.com/%{REQUEST_URI}?%{QUERY_STRING} [R,L]
   
	RewriteRule ^/resource\.php(.*)$ /resource$1 [R=301,L]
	RewriteCond %{REQUEST_URI} !^/resource\.php
	RewriteCond %{REQUEST_URI} ^/resource
	RewriteRule ^(.*)$ /resource.php?%{QUERY_STRING} [PT]

