#	RewriteLog /***REMOVED***/log/website/rewrite.log
#	RewriteLogLevel 9
   
	<IfModule mod_ssl.c>
		# Current live cert
		SSLEngine On
		SSLProtocol -ALL +SSLv3 +TLSv1
		SSLCipherSuite ALL:!aNULL:!ADH:!eNULL:!LOW:!EXP:RC4+RSA:+HIGH:!MEDIUM
		SSLCertificateFile /***REMOVED***/secure/certificates/***REMOVED***_secure.pem
		SSLCertificateKeyFile /***REMOVED***/secure/certificates/***REMOVED***_secure.key
		SSLCertificateChainFile /***REMOVED***/secure/certificates/***REMOVED***_secure-ca-bundle.crt

		<Files ~ "\.(***REMOVED***i|shtml|phtml|php?)$">
			SSLOptions +StdEnvVars
		</Files>
		<Directory "/usr/lib/***REMOVED***i-bin">
			SSLOptions +StdEnvVars
		</Directory>
		SetEnvIf User-Agent ".*MSIE.*" \
			nokeepalive ssl-unclean-shutdown \
			downgrade-1.0 force-response-1.0
	</IfModule>

	<IfModule mod_gnutls.c>
		GnuTLSEnable On
		GnuTLSSessionTickets On
		GnuTLSExportCertificates on
		GnuTLSPriorities SECURE
		GnuTLSCertificateFile /***REMOVED***/secure/certificates/***REMOVED***_secure.pem
		GnuTLSKeyFile /***REMOVED***/secure/certificates/***REMOVED***_secure.key
		GnuTLSClientCAFile /***REMOVED***/secure/certificates/***REMOVED***_secure-ca-bundle.crt
	</IfModule>
   
        #PCI Compliance fix
        RewriteCond %{REQUEST_METHOD} ^TRACE
        RewriteRule .* - [F]
</VirtualHost>

